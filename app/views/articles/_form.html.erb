<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
  <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :pdf, style: "display: block" %>
    <%= form.file_field :pdf %>
  </div>

  <div>
    <%= form.label :publisher_id, style: "display: block" %>
    <%= form.select :publisher_id, Publisher.all.pluck(:id) %>
  </div>

  <div>
    <%= form.label :author_id, style: "display: block" %>
    <%= form.select :author_id, Author.all.pluck(:id) %>
  </div>

  <div>
    <%= form.label :category_id, style: "display: block" %>
    <%= form.select :category_id, Category.all.pluck(:id) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
